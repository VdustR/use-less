{
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "commit": "git-cz",
    "pub": "lerna publish --conventional-commits"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/react": "^10.0.2",
    "@types/jest": "^25.2.1",
    "commitizen": "^4.0.4",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.6.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^5.3.0",
    "typescript": "^3.8.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick && lint-staged && jest && tsc --noEmit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  }
}
